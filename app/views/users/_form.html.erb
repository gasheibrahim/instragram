<%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>
<div class="container register">
  <div class="row">
    <div class="col-md-3 register-left">
      <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
      <h3>Welcome</h3>
      <p>Please Create A New Account!!!</p>
      <%= link_to "Login", new_session_path,class:"nav-link", style:"color:white;" %><br/>
    </div>
  <div class="col-md-9 register-right">
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <h3 class="register-heading">New User</h3>
        <div class="row register-form">
          <div class="col-md-6">
            <div class="form-group">
                <%= form.text_field :fullname, class:"form-control", placeholder:"Full Name *" %>
            </div>
            <div class="form-group">
              <%= form.text_field :username, class:"form-control", placeholder:"User Name *" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= form.text_field :email, class:"form-control", placeholder:"Email *" %>            
            </div>
            <div class="form-group">
              <%= form.text_field :phonenumber, class:"form-control", placeholder:"Phone Number *" %>
            </div>    
          </div>
          <div class="col-md-12">
            <div class="form-group">
              <%= form.text_field :password, class:"form-control", placeholder:"Password *" %>
            </div>
            <%= form.submit class:"btnRegister" %>
        </div> 
      </div>
    </div>
  </div>
</div>
<% end %>
